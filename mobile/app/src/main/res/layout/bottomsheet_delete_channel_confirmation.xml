<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:grid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delete channel confirmation"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="Are you sure you want to delete the following channel?" />

    <TextView
        android:id="@+id/ChannelDeleteName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/channelDeleteCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_toLeftOf="@id/delete_empty_space"
            android:text="Cancel"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:cornerRadius="4dp"
            android:textColor="@color/primary" />

        <View
            android:id="@+id/delete_empty_space"
            android:layout_height="1dp"
            android:layout_width="80dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/channelDeleteYesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/delete_empty_space"
            android:backgroundTint="@color/delete"
            android:text="Delete"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>