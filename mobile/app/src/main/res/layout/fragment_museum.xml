<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/museumFragment"
    android:background="@color/mainTheme"
    tools:context=".ui.home.fragments.museum.MuseumFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/museum_swipe_indication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe horizontally"
            android:layout_alignParentTop="true"
            android:textColor="#6d6d6d"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="12sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/museumPostsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/museum_swipe_indication"
            android:layout_marginTop="5dp">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>